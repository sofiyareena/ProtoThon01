#include <stdio.h>

int main()
{
   int i, n, c;
   printf("Enter the number of rows\n");
   scanf("%d",&n);
 
   for (i = 0; i < n; i++)
   {
      for (c = 0; c <= (n-i-1); c++)
         printf(" ");
 
      for (c = 0 ; c <= i; c++)
         printf("* ");
       
      printf("\n");
   }
   return 0;
}
